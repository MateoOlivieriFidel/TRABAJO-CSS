@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <title>Panel Principal</title>
</head>
<body>
    <div class="container">
        <h2 class="mt-5">Bienvenido, @ViewBag.NombreUsuario</h2>

        <div class="row mt-3">
            <div class="col-md-4">
                <a href="@Url.Action("Perfil", "Usuario")" class="btn btn-primary btn-block">Mi Perfil</a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Modulo1", "Funciones")" class="btn btn-secondary btn-block">Módulo 1</a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Modulo2", "Funciones")" class="btn btn-secondary btn-block">Módulo 2</a>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                li>@Html.ActionLink("Salir", "CerrarSesion", "Home")</li>
            </div>
        </div>
